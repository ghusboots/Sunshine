<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory>
        <EditTextPreference
            android:title="@string/preference_location_title"
            android:key="@string/preference_location_key"
            android:defaultValue="@string/preference_location_default"
            android:inputType="text"
            android:singleLine="true" />
        <ListPreference
            android:key="@string/preference_units_key"
            android:title="@string/preference_units_title"
            android:entries="@array/preference_units_options"
            android:entryValues="@array/preference_units_options_values"
            android:defaultValue="0" />


    </PreferenceCategory>
</PreferenceScreen>